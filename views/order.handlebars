<div class="text-7xl font-black text-center mb-4">Your Order Summary;</div>

{{#if cartSize}}
    <!--Display cart only if it has items-->
    <div class="text-md text-center mb-4">Shipping to :
        <div class="flex flex-col italic">
            <div>
                {{custData.firstName}} {{custData.lastName}}
            </div>
            <div>
                {{custData.address}}
            </div>
            <div>
                {{custData.city}}, {{custData.state}} {{custData.postalCode}}
            </div>
            <div>
                {{custData.country}}
            </div>
        </div>
    </div>
    <div class="flex items-center justify-center">
        <table class="shadow-lg bg-white">
            <thead>
            <tr>
                <th class="bg-black border text-center text-white px-8 py-4">Product Id</th>
                <th class="bg-black border text-center text-white px-8 py-4">Product Name</th>
                <th class="bg-black border text-center text-white px-8 py-4">Quantity</th>
                <th class="bg-black border text-center text-white px-8 py-4">Price</th>
                <th class="bg-black border text-center text-white px-8 py-4">Subtotal</th>
            </tr>
            </thead>
            <tbody>
            {{#each realProductList}}
                <tr>
                    <td class="border text-center px-8 py-4">{{this.id}}</td>
                    <td class="border text-left px-8 py-4">{{this.name}}</td>
                    <td class="border text-center px-8 py-4">{{this.quantity}}</td>
                    <td class="border text-left px-8 py-4">{{this.price}}</td>
                    <td class="border text-left px-8 py-4">{{subtotalFormat this}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
{{else}}
    <!--Error message if it doesn't have items-->
    <div class="text-2xl font-extralight text-center mb-4">Your cart is empty. <a class="underline font-black"
                                                                                  href="/listprod">Go shopping</a>
    </div>
{{/if}}

